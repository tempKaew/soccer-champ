{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@line-event/*": ["lib/line/event/*"],
      "@line-handler/*": ["lib/line/handler/*"],
      "@line-message/*": ["lib/line/style-message/*"],
      "@lib/*": ["lib/*"],
      "@styles/*": ["styles/*"]
    },
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "types": ["bun-types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
